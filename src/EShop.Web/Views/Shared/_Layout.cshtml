<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EShop.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css"/>
    <link rel="stylesheet" href="~/EShop.Web.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg sticky-top custom-gradient-light">
			<div class="container">
				<a class="navbar-brand" href="@Url.Action("Index", "Home")">
					<img src="~/images/full-logoBA.png" alt="Logo" class="img-fluid" width="200px">
				</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<partial name="_NavbarMenu"/>
					<div class="d-flex align-items-center">
						<a href="#" class="text-decoration-none">
							<i class="bi bi-heart-fill nav-icon"></i>
						</a>
						<a href="#" class="text-decoration-none">
							<i class="bi bi-bag-fill nav-icon"></i>
						</a>
						<partial name="_LoginPartial"/>
					</div>
				</div>
			</div>
		</nav>
	</header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white pt-5">
        <div class="container">
            <div class="d-flex">
                <!-- About Column -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase fw-bold mb-4">Our World</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <a href="#!" class="text-white-50 text-decoration-none hover-effect">
                                <i class="fas fa-angle-right me-2"></i>About us
                            </a>
                        </li>
                        <li class="mb-3">
                            <a href="#!" class="text-white-50 text-decoration-none hover-effect">
                                <i class="fas fa-angle-right me-2"></i>Collections
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase fw-bold mb-4">Assistance</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <a href="#!" class="text-white-50 text-decoration-none hover-effect">
                                <i class="fas fa-angle-right me-2"></i>Contact us
                            </a>
                        </li>
                        <li class="mb-3">
                            <a href="#!" class="text-white-50 text-decoration-none hover-effect">
                                <i class="fas fa-angle-right me-2"></i>Size Guide
                            </a>
                        </li>
                        <li class="mb-3">
                            <a href="#!" class="text-white-50 text-decoration-none hover-effect">
                                <i class="fas fa-angle-right me-2"></i>Shipping Information
                            </a>
                        </li>
                        <li class="mb-3">
                            <a href="#!" class="text-white-50 text-decoration-none hover-effect">
                                <i class="fas fa-angle-right me-2"></i>Returns & Exchanges
                            </a>
                        </li>
                        <li class="mb-3">
                            <a href="#!" class="text-white-50 text-decoration-none hover-effect">
                                <i class="fas fa-angle-right me-2"></i>Payment
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase fw-bold mb-4">Follow Us</h5>
                    <div class="social-links">
                        <a href="#!" class="text-white me-3 fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#!" class="text-white me-3 fs-5"><i class="bi bi-twitter"></i></a>
                        <a href="#!" class="text-white me-3 fs-5"><i class="bi bi-instagram"></i></a>
                        <a href="#!" class="text-white me-3 fs-5"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase fw-bold mb-4">Newsletter</h5>
                    <p class="text-white-50 mb-4">Stay updated with our latest trends and products.</p>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control bg-dark text-white border-secondary"
                               id="newsletterEmail" placeholder="name@example.com">
                        <label for="newsletterEmail" class="text-white-50">Email address</label>
                    </div>
                    <button type="submit" class="btn btn-outline-light w-100 hover-effect">
                        <i class="fas fa-paper-plane me-2"></i>Subscribe
                    </button>
                </div>
            </div>
        </div>

        <div class="text-center p-3 mt-5" style="background-color: rgba(0, 0, 0, 0.2);">
            © @DateTime.Now.Year <span class="fw-bold">EShop</span>. All rights reserved.
            <div class="mt-2">
                <a href="#!" class="text-white-50 text-decoration-none me-3 small hover-effect">Privacy Policy</a>
                <a href="#!" class="text-white-50 text-decoration-none me-3 small hover-effect">Terms of Service</a>
                <a href="#!" class="text-white-50 text-decoration-none small hover-effect">Cookie Settings</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
